            id: ProductName
            multiline: False

        Button:
            font_size: 32
            text: "Submit Product Name"

        TextInput:
            id: FoodQuantity
            multiline: False

        Button:
            font_size: 32
            text: "Submit Food Quantity"

        TextInput:
