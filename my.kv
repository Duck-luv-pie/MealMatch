<MainWindow>:
    name: "main"
    canvas.before:
        Color:
            rgba: (60/255,128/255,27/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2

        ImageButton:
            source: 'WebsitePics/Donator.png'
            allow_stretch:  True
            on_release:
                app.root.current = "DonatorLogin"

        ImageButton:
            source: 'WebsitePics/Receiver.png'
            allow_stretch:  True
            on_release:
                app.root.current = "ReceiverLogin"



    GridLayout:
        cols: 1

        ImageButton:
            source: 'WebsitePics/TopBar.png'
            allow_stretch:  True
            on_release:
                app.root.current = "main"

        Label:
            text: ''

        Label:
            text: ''







